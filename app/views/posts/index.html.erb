<header>
 <hi>つぶやき一覧</h1>
</header>
<p><%= notice %></p>
<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.content %></td>
    <td><%= link_to '新しくするつぶやく', new_post_path %></td>
    <td><%= link_to '詳細を確認する', post_path(post.id) %></td>
    <td><%= link_to "つぶやきを編集する", edit_post_path(post.id) %></td>
    <td><%= link_to "つぶやきを削除する", edit_post_path(post.id), data: { confirm: '本当に削除していいですか？' } %></td>
  </tr>
<% end %>

